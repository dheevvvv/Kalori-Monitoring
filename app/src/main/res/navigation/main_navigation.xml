<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_viewPageFragment"
            app:destination="@id/viewPageFragment" />
        <action
            android:id="@+id/action_splashFragment_to_welcomePageFragment"
            app:destination="@id/welcomePageFragment" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_adminHomeFragment"
            app:destination="@id/adminHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewPageFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.ViewPageFragment"
        android:label="fragment_view_page"
        tools:layout="@layout/fragment_view_page" >
        <action
            android:id="@+id/action_viewPageFragment_to_getStartedFragment"
            app:destination="@id/getStartedFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomePageFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.WelcomePageFragment"
        android:label="fragment_welcome_page"
        tools:layout="@layout/fragment_welcome_page" >
        <action
            android:id="@+id/action_welcomePageFragment_to_getStartedFragment"
            app:destination="@id/getStartedFragment" />
        <action
            android:id="@+id/action_welcomePageFragment_to_tabLayoutLoginRegisterFragment"
            app:destination="@id/tabLayoutLoginRegisterFragment" />
        <action
            android:id="@+id/action_welcomePageFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/getStartedFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.GetStartedFragment"
        android:label="fragment_get_started"
        tools:layout="@layout/fragment_get_started" >
        <action
            android:id="@+id/action_getStartedFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_getStartedFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_riwayatFragment"
            app:destination="@id/riwayatFragment" />
    </fragment>
    <fragment
        android:id="@+id/tabLayoutLoginRegisterFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.TabLayoutLoginRegisterFragment"
        android:label="fragment_tab_layout_login_register"
        tools:layout="@layout/fragment_tab_layout_login_register" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_adminHomeFragment"
            app:destination="@id/adminHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_getStartedFragment"
            app:destination="@id/getStartedFragment" />
        <action
            android:id="@+id/action_registerFragment_to_getStartedFragment2"
            app:destination="@id/getStartedFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminHomeFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.AdminHomeFragment"
        android:label="fragment_admin_home"
        tools:layout="@layout/fragment_admin_home" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_riwayatFragment"
            app:destination="@id/riwayatFragment" />
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/riwayatFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.RiwayatFragment"
        android:label="fragment_riwayat"
        tools:layout="@layout/fragment_riwayat" >
        <action
            android:id="@+id/action_riwayatFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_riwayatFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_riwayatFragment_to_tambahMakananFragment"
            app:destination="@id/tambahMakananFragment" />
    </fragment>
    <fragment
        android:id="@+id/tambahMakananFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.TambahMakananFragment"
        android:label="fragment_tambah_makanan"
        tools:layout="@layout/fragment_tambah_makanan" >
        <action
            android:id="@+id/action_tambahMakananFragment_to_formTambahMakananFragment"
            app:destination="@id/formTambahMakananFragment" />
    </fragment>
    <fragment
        android:id="@+id/formTambahMakananFragment"
        android:name="com.dheevvvv.kalorimonitoring.view.FormTambahMakananFragment"
        android:label="fragment_form_tambah_makanan"
        tools:layout="@layout/fragment_form_tambah_makanan" >
        <action
            android:id="@+id/action_formTambahMakananFragment_to_riwayatFragment"
            app:destination="@id/riwayatFragment" />
    </fragment>
</navigation>